<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class="well">
  <dl class='dl-horizontal'>
    <dt>Username:</dt>
    <dd><%= @user.username %></dd>
    <dt>Time zone:</dt>
    <dd></dd>
  </dl>
</div>

<h5><%= @user.username %>'s Activity</h5>

<ul class="nav nav-tabs">
  <li class="<%= 'active' if params[:tab].nil? %>">
    <%= link_to "Posts (#{@user.posts.size})", user_path(@user) %></a>
  </li>
  <li class="<%= 'active' if params[:tab] == 'comments' %>">
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %></a>
  </li>
</ul>

<% if params[:tab].nil? %>
  <%= render @user.posts %>
<% elsif params[:tab] == 'comments' %>
  <%= render @user.comments, show_post: true %>
<% end %>